<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Dropdown to select operation -->
    <Spinner
        android:id="@+id/spinnerOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/operations_array" />

    <!-- Pi operation buttons -->
    <LinearLayout
        android:id="@+id/layoutPi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnPiOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pi Option 1" />

        <Button
            android:id="@+id/btnPiOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pi Option 2"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Prime operation buttons -->
    <LinearLayout
        android:id="@+id/layoutPrime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnPrimeOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prime Option 1" />

        <Button
            android:id="@+id/btnPrimeOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prime Option 2"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Result display -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Result will appear here"
        android:textSize="16sp" />

</LinearLayout>
